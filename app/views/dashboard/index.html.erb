<div class="container text-start mt-5">
  <div class="row">
    <div class="col gap-3">
      <span><%= current_user.email %></span>
      <%= form_with model: Tweet.new, url: tweets_path, class: "mt-3", method: :post, local: true do |f| %>
        <%= f.text_field :body, class: "form-control form-control-lg fs-6 mb-3" %>
        <%= f.submit "Tweet", class: "btn btn-primary" %>
      <% end %>
      </div>
    <div class="col">
      <ul class="list-group">
        <%= Tweet.find_each do |tweet| %>
        <li class="list-group-item"><%= tweet.user.email %> <%= tweet.body %></li>
        <% end %>
      </ul>
    </div>
    <div class="col">
      <%= link_to 'Sign Out', destroy_user_session_path, data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-danger" %>
    </div>
  </div>
</div>