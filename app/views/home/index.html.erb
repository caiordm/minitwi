<div class="container text-start mt-5">
  <div class="row">
    <div class="col gap-3">
      <h1>Welcome to The Mini Twi!</h1>
      <h3 class="fs-4">Make posts and see other posts!!</h3>
    </div>
    <div class="col">
      <ul class="list-group">
        <%= Tweet.find_each do |tweet| %>
          <li class="list-group-item d-flex align-items-center justify-content-between"><span>@<%= tweet.user.username %> | <%= tweet.body %></span> <span style="font-size: 12px; color: #3065ac; font-weight: bold;"><%= tweet.updated_at.strftime("%Y-%m-%d %H:%M") %></span></li>
        <% end %>
      </ul>
    </div>
    <div class="col">
      <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-primary" %>    
    </div>
  </div>
</div>